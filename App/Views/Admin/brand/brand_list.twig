{% extends "Admin/base.twig" %}

{% block title %}Brand List{% endblock %}


{% block body %}

<div class="row">
    <div class="col-sm-12">
        <div class="page-header pull-left">
            <a href="{{url('admin/brand/insert')}}" class="btn btn-success"><i class="fa fa-edit fa-lg"></i> ثبت برند جدید</a>
        </div>
    </div>


    <!-- /.panel -->
    <div class="col-sm-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="text-center" >
                <div class="panel-heading " style="background-color: #94C9EE;">لیست برندها</div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>ردیف</th>
                            <th>عنوان</th>
                            <th>لوگو</th>
                            <th><i class="fa fa-cog"></i> تنظیمات</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if brands|length > 0 %}
                        {% for brand in brands %}
                        <tr>
                            <td>{{ brand.id }}</td>
                            <td>{{ brand.title }}</td>
                            <td>
                                <div style="width: 70px;">
                                    <img src="{{ url('uploads') }}/{{ brand.brand_logo }}" style="width: 100%">
                                </div>
                            </td>
                            <td>
                                <a href="{{ url('admin/brand/edit') }}/{{ brand.id }}" class="btn btn-primary">ویرایش</a>
                                <a href="{{ url('admin/brand/delete') }}/{{ brand.id }}" class="btn btn-danger" data-toggle="confirmation">حذف</a>
                            </td>
                        </tr>
                        {% endfor %}
                        {% else %}
                        !oops not found
                        {% endif %}

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

{% endblock %}

{% block script %}

{% endblock %}


