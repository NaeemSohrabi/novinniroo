{% extends "Admin/base.twig" %}

{% block title %}Contaact Insert{% endblock %}


{% block body %}
<!--Content Editor-->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">مدیریت ارتباط با ما</h1>

        <div class="panel panel-default">
            <div class="panel-heading">
                ورود اطلاعات
            </div>
            <div class="panel-body">
                <br>
                <div class="contact">
                    <form action="/admin/contact/store" class="form-horizontal" method="post"
                          enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">نام فارسی دفتر: </label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" name="fa_name" value="" placeholder="نام فارسی">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">نام انگلیسی دفتر: </label>
                            <div class="col-sm-6">
                                <input dir="ltr" type="text" class="form-control" name="en_name" value="" placeholder="نام انگلیسی">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">شماره تلفن: </label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" dir="ltr" name="phone" value="" placeholder="تلفن">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">شماره فکس: </label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" dir="ltr" name="fax" value="" placeholder="فکس">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">شماره موبایل: </label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" dir="ltr" name="mobile" value="" placeholder="موبایل">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">ایمیل: </label>
                            <div class="col-sm-6">
                                <input dir="ltr" type="text" class="form-control" name="email" value="" placeholder="ایمیل">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">وب سایت: </label>
                            <div class="col-sm-6">
                                <input dir="ltr" type="text" class="form-control" name="web" value="" placeholder="ایمیل">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">آدرس انگلیسی: </label>
                            <div class="col-sm-6">
                                <textarea dir="ltr" name="en_address" id="" class="form-control" rows="10" placeholder="آدرس به انگلیسی"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">آدرس فارسی: </label>
                            <div class="col-sm-6">
                                <textarea name="fa_address" id="" class="form-control" rows="10" placeholder="آدرس به فارسی"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">lat: </label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" dir="ltr" name="lat" value="" placeholder="مختصات">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">lang: </label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" dir="ltr" name="lng" value="" placeholder="مختصات">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3 col-sm-offset-2">
                                <button type="submit" class="btn btn-success">بارگذاری</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>


{% endblock %}

{% block script %}

<script>
    function openLanguage(evt, language) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(language).style.display = "block";
        evt.currentTarget.className += " active";
    }
</script>


{% endblock %}
