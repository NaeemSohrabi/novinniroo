{% extends "Admin/base.twig" %}

{% block title %}Customer Edit{% endblock %}


{% block body %}
<!--Content Editor-->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش بخش مشتریان</h1>
        <div class="panel panel-default">
            <div class="panel-heading">
                ویرایش اطلاعات
            </div>
            <div class="panel-body">
                <form action="/admin/customer/update" class="form-horizontal" method="post"
                      enctype="multipart/form-data">
                    <input type="hidden" class="form-control" name="id" value="{{ customer.id }}">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">نام مشتری: </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="title" placeholder="نام"
                                   value="{{ customer.title }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">تگ انگلیسی لوگو: </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" dir="ltr" name="alt" placeholder="تگ لوگو را به زبان انگلیسی وارد کنید"
                                   value="{{ customer.alt }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">تگ فارسی لوگو: </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="alt_fa" placeholder="تگ لوگو را به زبان فارسی وارد کنید"
                                   value="{{ customer.alt_fa }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">انتخاب لوگو مشتری: </label>
                        <div class="col-sm-6">
                            <input type="file" class="form-control" name="logo">
                        </div>

                    </div>
                    <div class="image-gallery">
                        <div class="col-sm-3">
                            <div class="image">
                                <img src="{{url('uploads')}}/{{customer.logo}}" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="ln-solid"></div>
                    <div class="form-group">
                        <div class="col-sm-6">
                            <button class="btn btn-primary" type="submit">ویرایش</button>
                            <!--<button class="btn btn-danger" type="submit">انصراف</button>-->
                        </div>

                    </div>

                </form>


            </div>
        </div>
    </div>
</div>


{% endblock %}

{% block script %}

<script>
    function openLanguage(evt, language) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(language).style.display = "block";
        evt.currentTarget.className += " active";
    }
</script>

{% endblock %}
