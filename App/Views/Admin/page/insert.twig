{% extends "Admin/base.twig" %}

{% block title %}Page Insert{% endblock %}


{% block body %}
    <!--Content Editor-->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">افزودن صفحه</h1>
            <div class="panel panel-default">
                <div class="panel-heading">
                    {#<div class="tab">#}
                        {#<button class="tablinks  active" onclick="openLanguage(event, 'data')">اطلاعات انگلیسی</button>#}
                        {#<button class="tablinks" onclick="openLanguage(event, 'fa_data')">اطلاعات فارسی</button>#}
                    {#</div>#}

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist" id="myTab">
                        <li role="presentation" class="active"><a href="#data" aria-controls="data" role="tab" data-toggle="tab">اطلاعات انگلیسی</a></li>
                        <li role="presentation"><a href="#fa_data" aria-controls="fa_data" role="tab" data-toggle="tab">اطلاعات فارسی</a></li>
                    </ul>

                </div>
                <div class="panel-body">


                    <div class="tab-content">

                            <div role="tabpanel" id="data" class="tab-pane active" >
                                <br>
                                <form action="/admin/page/store" class="form-horizontal" method="post"
                                      enctype="multipart/form-data">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label col-lg-offset-0">عنوان اول انگلیسی صفحه: </label>
                                    <div class="col-sm-4">
                                        <input dir="ltr" type="text" class="form-control" name="title" placeholder="title"
                                               value="">
                                    </div>
                                </div>
                                <br>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label col-lg-offset-0">عنوان دوم انگلیسی صفحه: </label>
                                    <div class="col-sm-4">
                                        <input dir="ltr" type="text" class="form-control" name="subtitle" placeholder="subtitle"
                                               value="">
                                    </div>
                                </div>
                                <br>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label col-lg-offset-0">اسلاگ صفحه: </label>
                                    <div class="col-sm-4">
                                        <input dir="ltr" type="text" class="form-control" name="slug" placeholder="slug"
                                               value="" required>
                                    </div>
                                </div>
                                <br>
                                <div class="col-lg-10 col-lg-offset-1">
                                    <h4>خلاصه
                                        <small>(این توضیحات در قسمت توضیحات ابتدایی در بالای صفحه نمایش داده می شود)</small>
                                    </h4>
                                    <div class="form-group">
                                <textarea class="description" name="summary"
                                          placeholder="Summary..."></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-10 col-lg-offset-1">
                                    <h4>متن
                                        <small>(این متن در قسمت توضیحات کامل در قسمت پایین صفحه نمایش داده می شود)</small>
                                    </h4>
                                    <div class="form-group">
                                <textarea class="description" name="description"
                                          placeholder="Description..."></textarea>
                                    </div>
                                </div>
                                <br>
                                <div class="col-lg-offset-1">
                                    <button class="btn btn-primary" type="submit">افزودن صفحه</button>
                                    <button class="btn btn-danger" onclick="history.go(-1);">انصراف</button>
                                </div>
                                {#</form>#}
                            </div>

                            <div role="tabpanel" id="fa_data" class="tab-pane fade">
                                <br>
                                <div class="form-group clearfix">
                                    <label class="col-sm-2 control-label col-lg-offset-0">عنوان اول فارسی صفحه: </label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" name="fa_title" placeholder="fa_title"
                                               value="">
                                    </div>
                                </div>
                                <br>
                                <div class="form-group clearfix">
                                    <label class="col-sm-2 control-label col-lg-offset-0">عنوان دوم فارسی صفحه: </label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" name="fa_subtitle" placeholder="fa_subtitle"
                                               value="">
                                    </div>
                                </div>
                                <br>
                                <div class="form-group clearfix">
                                    <label class="col-sm-2 control-label col-lg-offset-0">اسلاگ صفحه: </label>
                                    <div class="col-sm-4">
                                        <input dir="ltr" type="text" class="form-control" name="slug" placeholder="slug"
                                               value="" required>
                                    </div>
                                </div>
                                <br>
                                <div class="col-lg-10 col-lg-offset-1">
                                    <h4>خلاصه
                                        <small>(این توضیحات در قسمت توضیحات ابتدایی در صفحه نمایش داده می شود)</small>
                                    </h4>
                                    <div class="form-group clearfix">
                                <textarea class="description" name="fa_summary"
                                          placeholder="Summary..."></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-10 col-lg-offset-1">
                                    <h4>متن
                                        <small>(این متن در قسمت توضیحات نمایندگی ها در صفحه نمایش داده می شود)</small>
                                    </h4>
                                    <div class="form-group">
                                <textarea class="description" name="fa_description"
                                          placeholder="Description..."></textarea>
                                    </div>
                                </div>

                                <br>
                                <div class="col-lg-offset-1">
                                    <button class="btn btn-primary" type="submit">افزودن صفحه</button>
                                    <button class="btn btn-danger" onclick="history.go(-1);">انصراف</button>
                                </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
    </div>


{% endblock %}

