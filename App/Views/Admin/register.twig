<body>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="register-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">افزودن مدیر</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="/admin/user/store" method="post">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="نام مدیر" name="title" type="text" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="نام کاربری" name="username" type="text" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="رمز عبور" name="password" type="password">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="تکرار رمز عبور" name="confirm_password" type="password">
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="ثبت نام">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

