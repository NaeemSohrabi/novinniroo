<script>
    // ajax delete media for admin slide show in all part EX: product, brand , ....
    $(document).on('submit', '.media-form', function (e) {
        e.preventDefault();
        var elm = $(this); // این یعنی همان سلکتور فورم
        var action = $(this).attr('action');
        var form_data = $(this).serialize();
        $.ajax({
            type: "POST",
            url: action,
            data: form_data,
//                dataType: 'json',
            success: function (dataString) {
                if(action=='/ajax/media/delete'){
                    $(elm).closest('.image-wrapper').fadeOut();
                }else{
                    $(elm).find('#submit').attr('value', "انجام شد");
                    setTimeout(function(){ $(elm).find('#submit').attr('value', "ذخیره");}, 3000);
                }
                console.log('oops');
            }
//                error: function (request, status, error) {
//                    alert(request.responseText);
//                }
        });
    });
</script>

