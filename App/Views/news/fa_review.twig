{% extends "fa_base.twig" %}

{% block title %}News{% endblock %}
{% block meta_tag %}{{ elements.newsmeta.meta_tag }} {% endblock %}
{% block meta_description %}{{ elements.newsmeta.meta_description }} {% endblock %}

{% block head %}

{% endblock %}

{% block body %}

    {{ include('_templates/fa_header.twig') }}

    <section class="news">
        <div class="index-content">
            <div class="container">
                <div class="row">
                    {% if newses|length > 0 %}
                        {% for news in newses %}
                            <div class="col-sm-4">
                                <div class="card">
                                    <div class="image">
                                        <img src="{{ url('uploads') }}/{{ news.image }}" alt="{{ news.alt_fa }}">
                                    </div>
                                    <h4>{{ news.fa_title }}</h4>
                                    <div class="description news-fade"><p>{{ news.fa_description|raw }}</p></div>
                                    <button type="button" class="blue-button" data-toggle="modal" data-target="#{{ news.id }}">
                                        بیشتر
                                    </button>
                                </div>
                                <!-- Modal -->
                                <div class="modal fade" id="{{ news.id }}" tabindex="-1" role="dialog"
                                     aria-labelledby="myModalLabel">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 class="modal-title pull-left"
                                                    id="myModalLabel">{{ news.fa_title }}</h4>
                                                <h4 class="modal-title pull-right"
                                                    id="myModalLabel">{{ news.created_at }}</h4>
                                            </div>
                                            <div class="modal-body">

                                                <div class="description">
                                                    {{ news.fa_description|raw }}
                                                </div>

                                                <div class="news-image">
                                                    <img src="{{ url('uploads') }}/{{ news.image }}"
                                                         alt="{{ news.alt_fa }}">

                                                </div>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">
                                                    Close
                                                </button>
                                                {#<button type="button" class="btn btn-primary">Save changes</button>#}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        {% endfor %}
                    {% else %}
                        There is no news yet
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    <!-- Button trigger modal -->





    {{ include('_templates/fa_footer.twig') }}


{% endblock %}


{% block script %}



{% endblock %}
